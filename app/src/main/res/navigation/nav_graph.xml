<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/noteListFragment">

    <fragment
        android:id="@+id/noteListFragment"
        android:name="dev.leonardom.notasroom.presentation.note_list.NoteListFragment"
        android:label="NoteListFragment" >

        <action
            android:id="@+id/action_noteListFragment_to_noteDetailFragment"
            app:destination="@id/note_detail_graph" />

    </fragment>

    <navigation android:id="@+id/note_detail_graph"
        app:startDestination="@id/noteDetailFragment">

        <argument
            android:name="noteId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />

        <fragment
            android:id="@+id/noteDetailFragment"
            android:name="dev.leonardom.notasroom.presentation.note_detail.NoteDetailFragment"
            android:label="NoteDetailFragment">

            <action
                android:id="@+id/action_noteDetailFragment_to_bottomSheetColorSelectorFragment"
                app:destination="@id/bottomSheetColorSelectorFragment" />

            <argument
                android:name="noteId"
                app:argType="string"
                app:nullable="true"
                android:defaultValue="@null" />

        </fragment>

        <dialog
            android:id="@+id/bottomSheetColorSelectorFragment"
            android:name="dev.leonardom.notasroom.presentation.note_detail.BottomSheetColorSelectorFragment"
            android:label="BottomSheetColorSelectorFragment" />

    </navigation>

</navigation>